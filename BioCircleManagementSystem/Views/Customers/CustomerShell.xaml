<Page x:Class="BioCircleManagementSystem.Views.Customers.CustomerShell"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BioCircleManagementSystem.Views.Customers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomerShell">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
            <Button x:Name="CustomerFind"
                Content="FIND KUNDE"
                MinWidth="100"
                MinHeight="40"
                Click="Button_Click_CustomerFind"
                />
            <Button x:Name="CustomerCreate"
                Content="OPRET KUNDE"
                MinWidth="100"
                MinHeight="40"
                Click="Button_Click_CustomerCreate"
                />
        </StackPanel>
        <Frame x:Name="_customerFrame" Margin="100,0,0,0" NavigationUIVisibility="Hidden" />
    </Grid>
</Page>
