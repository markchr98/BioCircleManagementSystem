<Page x:Class="BioCircleManagementSystem.Views.Customers.CustomerFind"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BioCircleManagementSystem.Views.Customers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomerFind">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
            <TextBox Grid.Row="0" Grid.Column="0" Margin="0, 0, 0, 0" HorizontalAlignment="Right" Height="20" TextWrapping="Wrap" Text="Søg" VerticalAlignment="Top" Width="150"/>
            <Button Grid.Row="0" Grid.Column="1" Margin="-2, 0, 0, 0" Content="Søg" HorizontalAlignment="Right" Height="20" VerticalAlignment="Top" Width="50"/>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="175" />
                    <ColumnDefinition Width="75"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Virksomhedsnavn" HorizontalAlignment="Left" Margin="0, 0, 0, 0" Grid.Row="1" VerticalAlignment="Top"/>
                <Label Grid.Column="1" Content="Installations Adresse" HorizontalAlignment="Left" Margin="0, 0, 0, 0" Grid.Row="1" VerticalAlignment="Top"/>
                <Label Grid.Column="2" Content="By" HorizontalAlignment="Left" Margin="0, 0, 0, 0" Grid.Row="1" VerticalAlignment="Top"/>
                <Label Grid.Column="3" Content="Post nr." HorizontalAlignment="Left" Margin="0, 0, 0, 0" Grid.Row="1" VerticalAlignment="Top"/>
                <Label Grid.Column="4" Content="E-conomics nr." HorizontalAlignment="Left" Margin="0, 0, 0, 0" Grid.Row="1" VerticalAlignment="Top"/>
            </Grid>
        </Grid>
         

     
        <StackPanel x:Name="CustomerList" Grid.Row="1">
            
        </StackPanel>
        
    </Grid>
</Page>
