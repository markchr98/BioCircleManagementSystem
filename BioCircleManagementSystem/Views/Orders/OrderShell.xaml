<Page x:Class="BioCircleManagementSystem.Views.Orders.OrderShell"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BioCircleManagementSystem.Views.Orders"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderShell">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
            <Button x:Name="TestFind"
                Content="TEST"
                MinWidth="100"
                MinHeight="40"
                Click="Button_Click_TestFind"
                />
            <Button x:Name="TestCreate"
                Content="OPRET TEST"
                MinWidth="100"
                MinHeight="40"
                Click="Button_Click_TestCreate"
                />
            <Button x:Name="OrderCreate"
                Content="OPRET ORDRE"
                MinWidth="100"
                MinHeight="40"
                Click="Button_Click_OrderCreate"
                />
        </StackPanel>
        <Frame x:Name="_customerFrame" Margin="100,0,0,0" NavigationUIVisibility="Hidden" />
    </Grid>
</Page>
